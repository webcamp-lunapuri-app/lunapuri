<h2>会員情報編集</h2><br />

<%= form_with model:@client, url: client_path, local: true do |f| %>
  氏名　<%= f.text_field :last_name, autofocus: true %>　<%= f.text_field :first_name, autofocus: true %><br />
  カナ　<%= f.text_field :last_name_kana, autofocus: true %><%= f.text_field :first_name_kana, autofocus: true %><br />
  郵便番号 <%= f.text_field :postal_code, autofocus: true %><br />
  住所　<%= f.text_field :address, autofocus: true, size:"30x1" %><br />
  電話番号　<%= f.text_field :tel, autofocus: true %><br />
  メールアドレス　<%= f.text_field :email, autofocus: true %><br /><br />
  <%= f.submit '編集内容を保存', class:"btn btn-success" %>
  <%= link_to '退会する', unsubscribe_client_path, class:"btn btn-danger" %>
<% end %>

