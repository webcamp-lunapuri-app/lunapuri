<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-1">
      <h5 class="ml-5 mt-5">マイページ</h5><br />
      <table class="table-sm">
        <tr>
          <td><strong>登録情報</strong></td>
          <td><%= link_to '編集する', edit_client_path, class:"btn btn-sm btn-outline-primary" %></td>
       </tr>
      </table>
      <table class="table-sm table-bordered">
        <tr><td class="table-active">氏名</td>　<td><%= @client.last_name %>　<%= @client.first_name %></td></tr>
        <tr><td class="table-active">カナ</td><td><%= @client.last_name_kana %>　<%= @client.first_name_kana %></td></tr>
        <tr><td class="table-active">郵便番号</td><td><%= @client.postal_code %></td></tr>
        <tr><td class="table-active">住所</td><td><%= @client.address %></td></tr>
        <tr><td class="table-active">電話番号</td><td><%= @client.tel %></td></tr>
        <tr><td class="table-active">メールアドレス</td><td><%= @client.email %></td></tr>
      </table>
      <table class="table-sm mt-3">
        <tr><td><strong>配送先</strong></td>
        <td><%= link_to '一覧を見る', deliveries_path, class:"btn btn-sm btn-outline-secondary" %></td></tr>
        <tr><td><strong>注文履歴</strong></td>
        <td><%= link_to '一覧を見る', orders_path, class:"btn btn-sm btn-outline-secondary" %></td></tr>
      </table>
    </div>
  </div>
</div>
