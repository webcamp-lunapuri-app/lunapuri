<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h2>配送先編集</h2>
      <%= form_with model:@delivery, local: true do |f| %>
        <%= f.hidden_field :client_id, value: @client.id %>
          <table>
            <tr><th>郵便番号(ハイフンなし)</th><th><%= f.text_field :postal_code %></th></tr>
            <tr><th>住所</th><th><%= f.text_field :address %></th></tr>
            <tr><th>宛名</th><th><%= f.text_field :name, size:"40x1" %></th></tr>
            <tr><th><%= f.submit '新規登録', class:"btn btn-sm btn-success" %></th></tr>
          </table>
      <% end %>
      <h2>配送先一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @deliveries.each do |delivery| %>
            <tr>
              <td><%= delivery.postal_code %></td>
              <td><%= delivery.address %></td>
              <td><%= delivery.name %></td>
              <td>
                <%= link_to '編集', edit_delivery_path(delivery.id), class:"btn btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to '削除', delivery_path(delivery.id), class:"btn btn-sm btn-danger", method: :delete %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= paginate @deliveries %>