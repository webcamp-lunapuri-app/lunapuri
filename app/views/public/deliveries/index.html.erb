<h2>配送先登録</h2>

<%= form_with model:@delivery, local: true do |f| %>
  <%= f.hidden_field :client_id, value: @client.id %>
  <h6>郵便番号(ハイフンなし)　<%= f.text_field :postal_code %></h6>
  <h6>住所<%= f.text_field :address %></h6>
  <h6>宛名<%= f.text_field :name %></h6>
  <%= f.submit '新規登録', class:"btn btn-sm btn-success" %>

<% end %>

<div class="col-md-8 offset-md-1">
  <h2>配送先一覧</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
      </tr>
    </thead>
    <tbody>
      <% @deliveries.each do |delivery| %>
        <tr>
          <td><%= delivery.postal_code %></td>
          <td><%= delivery.address %></td>
          <td><%= delivery.name %></td>
          <td>
            <%= link_to '編集', edit_delivery_path(delivery.client_id), class:"btn btn-sm btn-success" %>
            <%= link_to '削除', delivery_path(delivery.id), class:"btn btn-sm btn-danger", method: :delete %>
          </td>
        </tr>
      <% end %>
<%= paginate @deliveries %>