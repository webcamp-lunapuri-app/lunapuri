<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h5 class="ml-5 mt-4 mb-4">配送先登録</h5>
      <%= form_with model:@delivery, local: true do |f| %>
        <%= f.hidden_field :client_id, value: @client.id %>
          <table class="table-smmt-3">
            <tr><th>郵便番号(ハイフンなし)</th><th><%= f.text_field :postal_code %></th><th></th></tr>
            <tr><th>住所</th><th><%= f.text_field :address, size:"60x1" %></th><th></th></tr>
            <tr>
              <th>宛名</th><th><%= f.text_field :name %></th>
              <th><%= f.submit '新規登録', class:"btn btn-sm btn-success" %></th>
            </tr>
          </table>
      <% end %>
      <h5 class="mt-5 ml-5">配送先一覧</h5>
      <table class="table table-striped table-bordered table-hover">
        <thead class="thead-light">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @deliveries.each do |delivery| %>
            <tr>
              <td><%= delivery.postal_code %></td>
              <td><%= delivery.address %></td>
              <td><%= delivery.name %></td>
              <td>
                <%= link_to '編集', edit_delivery_path(delivery.id), class:"btn btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to '削除', delivery_path(delivery.id), class:"btn btn-sm btn-danger", method: :delete %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= paginate @deliveries %>