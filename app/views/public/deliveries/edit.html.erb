<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h5 class="ml-5 mt-4 mb-4">配送先編集</h5>
      <%= form_with model:@delivery, local: true do |f| %>
        <%= f.hidden_field :client_id, value: @client.id %>
          <table class="table-sm">
            <tr><th>郵便番号(ハイフンなし)</th><th></th><th><%= f.text_field :postal_code %></th></tr>
            <tr><th>住所</th><th></th><th><%= f.text_field :address, size:"60x1" %></th></tr>
            <tr><th>宛名</th><th></th><th><%= f.text_field :name %></th><th><%= f.submit '変更内容を保存', class:"btn btn-sm btn-success" %></th></tr>
          </table>
      <% end %>
    </div>
  </div>
</div>