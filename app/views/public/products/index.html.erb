<div class="container">
<h4 class="ml-5 mt-4 mb-4"><strong>商品一覧</strong>（全<%= @products.count %>件）</h4>
  <div class="row">
    <% @products.each do |product| %>
        <div class="col-3">
          <table class="table-sm">
            <thead>
              <tr>
              <td>
                <%= link_to product_path(product) do %>
                  <%= attachment_image_tag product, :image, format: 'jpeg', size: "120x100" %>
                <% end %>
              </td>
            </tr>
            </thead>
            <tbody>
              <tr><td><strong><%= product.name %></strong></tr></td>
              <tr><td><strong>¥<%= product.price %></strong></tr></td>
            </tbody>
          </table>
        </div>
    <% end %>
  </div>
</div>
<%= paginate @products %>