<div class="container mt-5">
<h2>商品一覧（全<%= @products.count %>件）</h2>
<div class="row">
    <% @products.first(4).each do |product| %>
      <div class="col-3">
        <table>
          <thead>
            <tr><td><%= attachment_image_tag product, :image, format: 'jpeg', size: "100x100" %></td></tr>
          </thead>
          <tbody>
            <tr><td><%= link_to product.name, product_path(product) %></tr></td>
            <tr><td>¥<%= product.price %></tr></td>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
  <div class="text-center"><%= link_to "全ての商品を⾒る >", products_path %></div>
</div>
<%= paginate @products %>