<h4>注文一覧画面</h4>

<table class="table table-striped">
  <thead>
    <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tr>
    <td>
      <%= link_to admin_order_path(order.id) do %>
        <%= order.created_at %>
      <% end %>
    </td>
    <td>
       <%= order.client.last_name+order.client.first_name %>
    </td>
    <td>
      <%#= order. %>
    </td>
    <td>
      <%= order.order_status %>
    </td>
  </tr>
  <% end %>
</table>