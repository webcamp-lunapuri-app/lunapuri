<h4>注文詳細画面</h4>
<table>
    <tr>
        <th>購入者</th>
        <th><% @order.client.last_name+@order.client.first_name %></th>
    </tr>
    <tr>
        <th>注文日</th>
        <th><%= @order.created_at %></th>
    </tr>
    <tr>
        <th>配送先</th>
        <th><%= @order.delivery_postal_code %><br />
            <%= @order.delivery_address %></th>
    </tr>
    <tr>
        <th>支払方法</th>
        <th><%= @order.payment_methods %></th>
    </tr>
    <tr>
        <th>注文ステータス</th>
        <th><%= @order.order_status %></th>
    </tr>
</table>

<table>
    <thead>
        <tr>
            <th>商品名</th>
            <th>単価</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
        </tr>
    </thead>
    <tbody>
        <%# @order_items.each do |order_item| %>
        <tr>
            <th><%#= order_item.product.name %></th>
            <th><%#= (order_item.purchase_price.rationalize*1.1r)to_i %><span>円</span></th>
            <th><%#= order_item.count %></th>
            <th><%#= (order_item.purchase_price.rationalize*order_item.count.rationalize*1.1r)to_i %><span>円</span></th>
            <th><%#= order_item.production_status %></th>
        </tr>
        <%# end %>
    </tbody>
</table>

<table>
    <tr>
        <th>商品合計</th>
        <th><%= (@order.total_amounts.rationalize-@order.delivery_charge.rationalize).to_i %><span>円</span></th>
    </tr>
    <tr>
        <th>送料</th>
        <th><%= @order.delivery_charge %><span>円</span></th>
    </tr>
    <tr>
        <th>請求金額合計</th>
        <th><%= @order.total_amounts %><span>円</span></th>
    </tr>
</table>


