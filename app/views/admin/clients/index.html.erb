<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h4 class="ml-5 mt-5">会員情報一覧</h4>
      <table class="table table-striped mt-5">
        <tr>
          <td>会員ID</td>
          <td>会員氏名</td>
          <td>メールアドレス</td>
          <td>ステータス</td>
        </tr>
        <% @clients.each do |client| %>
        <tr>
          <td><%= client.id %></td>
          <td>
            <%= link_to admin_client_path(client.id) do %>
              <%= client.last_name+client.first_name %>
            <% end %>
          </td>
          <td><%= client.email %></td>
          <td><% if client.is_unsubscribe_flag == "Available" %>
                  有効会員
              <% elsif client.is_unsubscribe_flag == "Invalid" %>
                  無効会員
              <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<%= paginate @clients %>