<h2><%= @client.last_name+@client.first_name %>さんの会員情報編集画面</h2>

<h4>会員ID</h4>
<%= @client.id %>

<%= form_with model: @client, url: admin_client_path, local:true do |f| %>
  <h4>氏名</h4>
  <%= f.text_area :last_name %>
  <%= f.text_area :first_name %>
  <h4>フリガナ</h4>
  <%= f.text_area :last_name_kana %>
  <%= f.text_area :first_name_kana %>
  <h4>郵便番号</h4>
  <%= f.text_area :postal_code %>
  <h4>住所</h4>
  <%= f.text_area :address %>
  <h4>電話番号</h4>
  <%= f.text_area :tel %>
  <h4>メールアドレス</h4>
  <%= f.text_area :email %>
  <h4>会員ステータス</h4>
  <%= f.radio_button :is_unsubscribe_flag, "false" %><p>有効会員</p>
  <%= f.radio_button :is_unsubscribe_flag, "true" %><p>退会会員</p>

  <%= f.submit'変更を保存する' %>
  <% end %>
