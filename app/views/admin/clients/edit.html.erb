<h4><%= @client.last_name+@client.first_name %>さんの会員情報編集画面</h4>
<table>
  <tr>
    <th><h6>会員ID</h6></th>
    <th><%= @client.id %></th>
  </tr>
  <%= form_with model: @client, url: admin_client_path, local:true do |f| %>
    <tr>
      <th><h6>氏名</h6></th>
      <th><%= f.text_field :last_name %><%= f.text_field :first_name %></th>
    </tr>
    <tr>
      <th><h6>フリガナ</h6></th>
      <th>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </th>
    </tr>
    <tr>
      <th><h6>郵便番号</h6></th>
      <th><%= f.text_field :postal_code %></th>
    </tr>
    <tr>
      <th><h6>住所</h6></th>
      <th><%= f.text_field :address %></th>
    </tr>
    <tr>
      <th><h6>電話番号</h6></th>
      <th><%= f.text_field :tel %></th>
    </tr>
    <tr>
      <th><h6>メールアドレス</h6></th>
      <th><%= f.text_field :email %></th>
    </tr>
    <tr>
      <th><h6>会員ステータス</h6></th>
      <th><%= f.radio_button :is_unsubscribe_flag, "Available" %><p>有効会員</p></th>
      <th><%= f.radio_button :is_unsubscribe_flag, "Invalid" %><p>退会会員</p></th>
    </tr>
    <tr><th><%= f.submit'変更を保存する' %></th></tr>
  <% end %>
</table>