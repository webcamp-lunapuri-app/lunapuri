<h4>商品一覧画面</h4>

<%= link_to '製品の新規投稿を行う' , new_admin_product_path, class:"btn btn-sm btn-primary" %>
<table class="table table-striped">
  <thead>
    <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
    </tr>
  </thead>
  <% @products.each do |product| %>
  <tr>
    <td><%= product.id %></td>
    <td>
      <%= link_to admin_product_path(product.id) do %>
       <%= product.name %>
      <% end %>
    </td>
    <td><%= product.price %></td>
    <td><%= product.genre.name %></td>
    <td>
      <% if product.is_sales_status %>
          販売中
      <% elsif %>
          販売停止中
      <% end %>
      </td>
  </tr>
  <% end %>
</table>