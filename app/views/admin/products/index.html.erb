<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h4>商品一覧画面</h4>
      <%= link_to '製品の新規投稿を行う' , new_admin_product_path, class:"btn btn-sm btn-primary" %>
      <table class="table table-striped">
          <tr>
          <td>商品ID</td>
          <td>商品名</td>
          <td>税抜価格</td>
          <td>ジャンル</td>
          <td>ステータス</td>
          </tr>
          <% @products.each do |product| %>
            <% if product.genre.is_active %>
              <tr>
                <td><%= product.id %></td>
                <td>
                  <%= link_to admin_product_path(product.id) do %>
                   <%= product.name %>
                  <% end %>
                </td>
                <td><%= product.price %></td>
                <td><%= product.genre.name %></td>
                <td>
                  <% if product.is_sales_status %>
                      販売中
                  <% elsif %>
                      販売停止中
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
      </table>
      <%= paginate @products %>
    </div>
  </div>
</div>
