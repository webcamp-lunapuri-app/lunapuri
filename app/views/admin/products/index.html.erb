<div class="container mt-5">
  <div class="row">
    <div class="col-7 offset-1">
      <h5 class="ml-5 mb-3">商品一覧画面</h5>
    </div>
    <div class="col-3">
      <%= link_to '新しい商品を追加する' , new_admin_product_path, class:"btn btn-sm btn-outline-primary" %>
    </div>
  </div>
</div>
<div class="container mt-5">
  <div class="row">
    <div class="col-10 offset-1">
      <table class="table table-striped">
          <tr>
          <td>商品ID</td>
          <td>商品名</td>
          <td>税抜価格</td>
          <td>ジャンル</td>
          <td>ステータス</td>
          </tr>
          <% @products.each do |product| %>
            <% if product.genre.is_active %>
              <tr>
                <td><%= product.id %></td>
                <td>
                  <%= link_to admin_product_path(product.id) do %>
                   <%= product.name %>
                  <% end %>
                </td>
                <td><%= product.price %></td>
                <td><%= product.genre.name %></td>
                <td>
                  <% if product.is_sales_status %>
                      販売中
                  <% elsif %>
                      販売停止中
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
      </table>
      <%= paginate @products %>
    </div>
  </div>
</div>
