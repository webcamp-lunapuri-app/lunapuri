<h4>商品新規登録</h4>

<table>
  <%= form_with model:@new_product,url: admin_products_path, local:true do |f| %>
    <tr>
      <th><h6>商品画像</h6></th>
      <th><%= f.attachment_field :image %></th>
    </tr>
    <tr>
      <th><h6>商品名</h6></th>
      <th><%= f.text_field :name %></th>
    </tr>
    <tr>
      <th><h6>商品説明</h6></th>
      <th><%= f.text_area :introduction %></th>
    </tr>
    <tr>
      <th><h6>ジャンル</h6></th>
      <th><%= f.collection_select(:genre_id, @genres, :id, :name,{prompt: "製品ジャンルを選択してください"}) %></th>
    </tr>
    <tr>
      <th><h6>税抜価格</h6></th>
      <th><%= f.number_field :price %><span>円</span></th>
    </tr>
    <tr>
      <th><h6>販売ステータス</h6></th>
      <th><%= f.radio_button :is_sales_status,"true" %><p>販売中</p></th>
      <th><%= f.radio_button :is_sales_status, "false" %><p>販売停止</p></th>
    </tr>
    <tr>
      <th><%= f.submit'新規作成' %></th>
    </tr>
  <% end %>
</table>