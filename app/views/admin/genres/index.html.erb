<h2>製品ジャンル一覧・追加</h2>

<%= form_with model: @new_genre, url: admin_genres_path, local:true do |f| %>
  <h4>ジャンル名</h4>
  <%= f.text_field :name %>
  <%= f.submit '新規投稿' %>
<% end %>

<table>
  <tr>
    <td>ジャンル名</td>
    <td></td>
  </tr>
  <% @genres.each do |genre| %>
  <tr>
    <td>
      <%= genre.name %>
    </td>
    <td>
      <%= link_to "編集",edit_admin_genre_path(genre) %>
    </td>
  </tr>
  <% end %>
</table>


