<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-1">
      <h5 class="ml-5 mt-4 mb-4">製品ジャンル一覧・追加</h5>
      <%= form_with model: @new_genre, url: admin_genres_path, local:true do |f| %>
        <table class="table-sm">
          <tr>
            <td><h6>ジャンル名</h6></td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit '新規登録', class:"btn btn-success" %></td>
          </tr>
        </table>
      <% end %>
      <table class="table table-striped table-bordered mt-5">
        <thead class="thead-light">
          <tr>
            <td class="text-center">ジャンル名</td>
            <td class="text-center">製造状況</td>
            <td></td>
          </tr>
        </thead>
        <% @genres.each do |genre| %>
          <tr>
            <td class="text-center">
              <%= genre.name %>
            </td>
            <td class="text-center">
              <% if genre.is_active %>
                製造中
              <% elsif %>
                製造停止
              <% end %>
            </td>
            <td class="text-center">
              <%= link_to "編集する",edit_admin_genre_path(genre), class:"btn btn-success" %>
            </td>

          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>


