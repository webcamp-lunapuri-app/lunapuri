<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<%= render "clients/shared/error_messages", resource: resource %>

  <div class="field">
    名前　(姓)
    <%= f.text_field :last_name, autofocus: true %>
     (名)
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    フリガナ　(セイ)
    <%= f.text_field :last_name_kana, autofocus: true %>
    (メイ)
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class="field">
    メールアドレス
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    郵便番号(ハイフンなし)
    <%= f.text_field :postal_code, autofocus: true, placeholder:'', class:"postal_code" %>
  </div>

  <div class="field">
    住所
    <%= f.text_field :address, autofocus: true, class:"address" %>
  </div>

  <div class="field">
    電話番号(ハイフンなし)
    <%= f.text_field :tel, autofocus: true %>
  </div>


  <div class="field">
    パスワード(6文字以内)
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    パスワード(確認用)
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class:"btn btn-success btn-lg btn-block" %><br />
  </div>
<% end %>

<h2>既に登録済みの方</h2>
  <div><%= link_to 'こちら', new_client_session_path %>　からログインしてください。</div>