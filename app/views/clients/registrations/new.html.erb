<div class="container">
  <div class="row">
    <div class="col-10 col-offset-1">
      <h5 class="ml-5 mt-5 mr-0 mb-3">新規会員登録</h5>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= render "clients/shared/error_messages", resource: resource %>
      <table class="table-sm">
        <tr>
          <td>名前　　　　　　　　(姓)　</td>
          <td><%= f.text_field :last_name, autofocus: true %></td>
          <td>(名)　　<%= f.text_field :first_name, autofocus: true %></td>
        </tr>

        <tr>
          <td>フリガナ　　　　　　(セイ)　</td>　<td><%= f.text_field :last_name_kana, autofocus: true %></td>
          <td>(メイ)　<%= f.text_field :first_name_kana, autofocus: true %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>

        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :postal_code, autofocus: true, placeholder:'', class:"postal_code" %></td>
        </tr>

        <tr>
          <td>住所</td>
          <td colspan="2"><%= f.text_field :address, autofocus: true, class:"address" %></td>
        </tr>

        <tr>
          <td>電話番号(ハイフンなし)</td>
          <td><%= f.text_field :tel, autofocus: true %></td>
        </tr>


        <tr>
          <td>パスワード(6文字以内)</td>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>

        <tr>
          <td>パスワード(確認用)</td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>

        <tr>
          <td></td>
          <td><%= f.submit "新規登録", class:"btn btn-outline-success btn-block" %></td><br />
        </tr>
      </table>
      <% end %>

      <h5 class="mt-5">既に登録済みの方</h5>
        <div><%= link_to 'こちら', new_client_session_path %>　からログインしてください。</div>
    </div>
  </div>
</div>